<h1><%= @item.name %></h1>
<h3><%= @item.quantity %>, <%= @item.quantity_type %></h3>
<p><% if @item.brand != "" %>
    - <%= @item.brand %>
    <% end %><br>
    <% if @item.variety != "" %>
    - <%= @item.variety %>
    <% end %><br>
    <% if @item.flavor != "" %>
    - <%= @item.flavor %>
    <% end %></p>

  <a href="/tweets/<%= @item.id %>/edit">Edit Item</a>

  <form method="post" action="/items/<%= @item.id %>">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Item">
</form>