<h1>Welcome, <%= @user.username %> This is your pantry, <%= @pantry.name %>.</h1>

<h3><a href="/items/new">Add New Item</a></h3>

<% @pantry.categories.each do |category| %>
  <h2><a href="/category/<%= category.id %>"><%= category.name %></a></h2>
  <% category.items.each do |item| %>
    <p><a href="/items/<%= item.id %>"><%= item.quantity %>, <%= item.quantity_type %> - <%= item.name %>
    <% if item.brand != "" %>
    , <%= item.brand %>
    <% end %>
    <% if item.variety != "" %>
    , <%= item.variety %>
    <% end %>
    <% if item.flavor != "" %>
    , <%= item.flavor %>
    <% end %></a></p>
  <% end %>
<% end %>
