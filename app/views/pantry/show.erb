<h1>Welcome, <%= @user.username %> This is your pantry, <%= @pantry.name %>.</h1>

<h3><a href="/items/new">Add New Item</a></h3>

<% @pantry.categories.each do |category| %>
  <% binding.pry %>
  <% category.items.each do |item| %>
  <% binding.pry %>
    <p><%= item.quantity %>, <%= item.quantity_type %> - <%= item.name %>
    <% if item.brand != nil %>
      , <% item.brand %>
    <% end %>
    <% if item.variety != nil %>
      , <% item.variety %>
    <% end %>
    <% if item.flavor != nil %>
      , <% item.flavor %>
    <% end %></p>
  <% end %>
<% end %>
